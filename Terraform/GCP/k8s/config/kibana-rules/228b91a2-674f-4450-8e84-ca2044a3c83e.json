{
  "name": "Node CPU Usage",
  "tags": [],
  "schedule": {
    "interval": "1m"
  },
  "rule_type_id": "metrics.alert.inventory.threshold",
  "consumer":"alerts",
  "params": {
    "nodeType": "host",
    "criteria": [
      {
        "metric": "cpu",
        "comparator": ">",
        "threshold": [
          95
        ],
        "timeSize": 1,
        "timeUnit": "m",
        "customMetric": {
          "type": "custom",
          "id": "alert-custom-metric",
          "field": "",
          "aggregation": "avg"
        }
      }
    ],
    "sourceId": "default",
    "alertOnNoData": true
  },
  "actions": [
    {
      "group": "metrics.inventory_threshold.fired",
      "id": "735a866d-edba-41fe-a305-abadf67549ac",
      "params": {
        "level": "info",
        "message": "ðŸ”´ {{context.alertState}} {{context.reason}}\n\n{{rule.name}} is active with the following conditions:\n\n- Affected: {{context.group}}\n- Metric: {{context.metric}}\n- Observed value: {{context.value}}\n- Threshold: {{context.threshold}}\n\n[View alert details]({{context.alertDetailsUrl}})\n"
      },
      "frequency": {
        "notify_when": "onActionGroupChange",
        "throttle": null,
        "summary": false
      },
      "uuid": "bf49c616-605f-478e-b711-08b8e7421551"
    },
    {
      "group": "recovered",
      "id": "735a866d-edba-41fe-a305-abadf67549ac",
      "params": {
        "level": "info",
        "message": " ðŸŸ¢  {{rule.name}} has recovered.\n\n- Affected: {{context.group}}\n- Metric: {{context.metric}}\n- Threshold: {{context.threshold}}\n\n[View alert details]({{context.alertDetailsUrl}})\n"
      },
      "frequency": {
        "notify_when": "onActionGroupChange",
        "throttle": null,
        "summary": false
      },
      "uuid": "9ea623c8-554b-4c27-aaad-0c6669f27663"
    }
  ]
}
